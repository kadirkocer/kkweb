# ========================================
# KKWeb Environment Configuration
# ========================================

# Required: Admin Panel Authentication
ADMIN_USERNAME=admin
ADMIN_PASSWORD=secure_password_here

# Content Storage Mode
# Options: FILE (dev), MEMORY (prod), KV, GITHUB
CONTENT_STORAGE=FILE

# Security Configuration
RATE_LIMIT=10rps
REVALIDATE_TOKEN=your_secret_revalidation_token

# Observability & Monitoring
METRICS_ENABLED=true
METRICS_BASIC=1
TELEMETRY_DISABLED=false

# Build Information
VERCEL_GIT_COMMIT_SHA=development
NODE_ENV=development

# Feature Flags
DEBUG_MODE=false
REDUCED_MOTION_OVERRIDE=false

# Next.js Configuration
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# ========================================
# Court × Street × Pixel Configuration
# ========================================

# Theme Settings
THEME_MODE=court-street-pixel
PIXEL_SCALE=2
PARALLAX_ENABLED=true

# Animation Settings
ANIMATION_DURATION_SCALE=1.0
EASING_PREFERENCE=cubic

# Asset Configuration
PIXEL_ATLAS_VERSION=2.0
SPRITE_PRELOAD=true

# Performance Settings
ISR_REVALIDATE_SECONDS=60
PREFETCH_SCENES=true

# ========================================
# External Services (Optional)
# ========================================

# GitHub Integration (for GitHub storage mode)
# GITHUB_TOKEN=ghp_xxxxxxxxxxxx
# GITHUB_REPO=username/repo
# GITHUB_BRANCH=main

# KV Storage (for Vercel KV mode)  
# KV_REST_API_URL=https://xxx.upstash.io
# KV_REST_API_TOKEN=xxxxxxxxx

# OpenTelemetry (for advanced monitoring)
# OTEL_EXPORTER_OTLP_ENDPOINT=https://api.honeycomb.io
# OTEL_EXPORTER_OTLP_HEADERS=x-honeycomb-team=your-api-key

# ========================================
# Development Only
# ========================================

# Hot Reload Settings
FAST_REFRESH=true
DEV_OVERLAY=true

# Debug Configuration
DEBUG_STORAGE=false
DEBUG_RATE_LIMITING=false
DEBUG_MIDDLEWARE=false

# Asset Development
PIXEL_ART_DEV_MODE=false
SPRITE_HOT_RELOAD=false

# ========================================
# Production Only
# ========================================

# Security Headers
FORCE_HTTPS=true
SECURE_COOKIES=true

# Performance
ENABLE_COMPRESSION=true
CACHE_CONTROL_MAX_AGE=31536000

# Monitoring
ERROR_REPORTING=true
PERFORMANCE_MONITORING=true

# ========================================
# Advanced Configuration
# ========================================

# Timeline Settings
SCENE_TRANSITION_DURATION=1000
PARALLAX_WORLD_WIDTH=5000
SMOOTH_PROGRESS_DAMPING=0.1

# Input Handling
SCROLL_SENSITIVITY=1.0
KEYBOARD_NAVIGATION=true
TOUCH_GESTURES=true

# Accessibility
REDUCED_MOTION_DETECTION=true
HIGH_CONTRAST_MODE=false
SCREEN_READER_OPTIMIZATION=true

# Legal/Court Theme
COURT_SYMBOLS_ENABLED=true
LEGAL_TERMINOLOGY=true
STENCIL_LABELS=true

# Street Theme  
STREET_ART_ELEMENTS=true
URBAN_TEXTURES=true
GRAFFITI_STYLE=true

# Pixel Theme
RETRO_ANIMATIONS=true
EIGHT_BIT_SOUNDS=false
PIXEL_PERFECT_RENDERING=true